<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="MyBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetStyle</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice.Dan" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/selector_text_color_report_msg_chip</item>
        <item name="chipStrokeColor">@color/selector_text_color_report_msg_chip</item>
        <item name="chipBackgroundColor">@color/selector_bg_report_msg_chip</item>
    </style>
</resources>